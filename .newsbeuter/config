# n2o4 newsbeuter config
confirm-exit yes
refresh-on-startup yes
always-display-description true
auto-reload yes
reload-time 30
browser nlinks
error-log "~/.newsbeuter/error.log"
max-items 500
goto-next-feed no

notify-xterm yes

show-read-feeds no
show-read-articles no

# Keybindings go here
# Vim-like navigation
bind-key j down
bind-key k up
bind-key h left
bind-key l right

bind-key m toggle-show-read-feeds

# n2o4 color theme
color   background  default default
color   listnormal  blue    default bold
color   listfocus   green   default bold
color   info        white   black   dim
color   article     white   default
