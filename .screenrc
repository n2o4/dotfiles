# Set statusline
hardstatus alwayslastline "%{=}%{G}[ %{G}%H %{g}][ Screen(s): %{w}%w %=%{kG}][ Load: %l ][ %c %D, %d.%m.%Y ]"

# No visual bell
vbell off
# Detach on hangup
autodetach on
# Skip screen startup message
startup_message off
# Nethack error messages!!
nethack on
# Set scrollback to 5000
defscrollback 5000
# Emulate .logout message
pow_detach_msg "Screen session of \$LOGNAME \$:cr:\$:nl:ended."

#term "screen-256color"
#term rxvt-256color
term "xterm-256color"

# KEYBINDINGS
# F5 to detach screen session from terminal
# F6 to kill current screen window
# F7 to create a new screen
# F8 to rename current screen window
# F11 to move to previous window
# F12 to move to next window
bindkey -k k5 detach
bindkey -k k6 kill
bindkey -k k7 screen
bindkey -k k8 title
bindkey -k F1 prev
bindkey -k F2 next
# Vim-like movement between panes
bind j focus down
bind k focus up
bind h focus top 
bind l focus bottom 


screen -t "bash" 1
screen -t "ncmpcpp" 2 ncmpcpp
screen -t "mutt" 3 mutt
screen -t "newsbeuter" 4 newsbeuter
screen -t "irssi" 5 irssi 
