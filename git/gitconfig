[user]
    name = Sauli Heinola
    email = n2o4@kapsi.fi

[color]
    ui = true
[color "branch"]
    current = green bold
    remote = red bold
[color "diff"]
    meta = yellow
    frag = cyan bold
    old = red bold
    new = green bold
    whitespace = red reverse
[color "status"]
    added = green bold
    changed = red bold
    untracked = red bold
    interactive = auto
    pager = true
[core]
    whitespace=fix,-indent-with-non-tab,trailing-space,cr-at-eol
    excludesfile = /home/n2o4/.gitignore_global

[alias]
    a = add
    br = branch
    st = status -sb
    ss = status
    ci = commit
    df = diff
    dc = diff --cached
    co = checkout
    w = whatchanged
    vimdiff = difftool --tool=vimdiff
    vd = difftool --tool=vimdiff
    unstage = reset HEAD
    undo = checkout --
    snapshot = !git archive HEAD | gzip > $(basename $(pwd)).tar.gz
    todo = grep -i -n -e ' FIX: *' -e ' TODO: *'
    lol = log --oneline --graph --decorate
    hist = log --all --graph --pretty='[%C(cyan)%h%Creset]%C(bold cyan)%d%Creset %s'
    showdiff = "!sh -c 'git difftool --tool=vimdiff -y $1^ $1' -"
    # lg = "log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit --date=relative"
    lg = "log --color --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit"
    lg-ascii = "log --graph --pretty=format:'%h -%d %s (%cr) <%an>' --abbrev-commit"

[merge]
    tool = vimdiff

[diff]
    tool = vimdiff

[difftool]
    prompt = false
[apply]
	whitespace = nowarn
[github]
	user = n2o4
[web]
	browser = w3m
[pull]
	rebase = true
[push]
	default = tracking
[sendemail]
	chainreplyto = false
    aliasesfile=/home/n2o4/.mutt/aliases
    aliasesfiletype=mutt
